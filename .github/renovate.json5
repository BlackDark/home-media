{
  extends: ["github>linkvt/renovate-base"],
  kubernetes: {
    fileMatch: ["kubernetes/.+\\.ya?ml$"],
  },
  ignorePaths: ["kubernetes/.helm-charts"],
  packageRules: [
    {
      matchPackagePatterns: ["(^|\\/)linuxserver\\/.*$"],
      versioning: "regex:^(?<prerelease>develop-)?v?(?<major>\\d+)\\.?(?<minor>\\d+)?\\.?(?<patch>\\d+)?(\\.|-)?(?<build>\\w?\\d+)?-ls\\d+$",
    },
    {
      matchPaths: ["kubernetes/**"],
      schedule: ["at any time"],
    },
    {
      matchDepNames: ["k8up-io/k8up"],
      versioning: "regex:^\\w+-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
    },
    {
      matchPaths: ["**/helm-chart.yml", "**/helm-chart.yaml"],
      additionalBranchPrefix: "kluctl-",
    },
  ],
  regexManagers: [
    {
      datasourceTemplate: "helm",
      fileMatch: ["helm-chart\\.ya?ml$"],
      matchStringsStrategy: "combination",
      matchStrings: [
        "repo:\\s+(?<registryUrl>.*)",
        "chartName:\\s+(?<depName>.*)",
        "chartVersion:\\s+(?<currentValue>.*)",
      ],
    },
    {
      datasourceTemplate: "github-releases",
      fileMatch: ["kustomization\\.ya?ml$"],
      matchStrings: [
        "github\\.com\\/(?<depName>[^\\/]*\\/[^\\/]*)\\/releases\\/download\\/(?<currentValue>[^\\/]*)",
      ],
    },
  ],
}
