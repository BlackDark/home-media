---
# Homer configuration
# defaults: https://github.com/bastienwirtz/homer/blob/main/src/assets/defaults.yml
# icons: https://fontawesome.com/v5/search

header: false

services:
  - name: Cloud
    icon: fas fa-cloud
    items:
      - name: Bitwarden
        logo: assets/tools/bitwarden.png
        url: https://bitwarden.linkvt.de
      - name: Home Assistant
        logo: assets/tools/home-assistant.png
        url: https://home-assistant.linkvt.de
      - name: Transmission
        logo: assets/tools/transmission.svg
        url: http://transmission.{{ homer_load_balancer_ip }}.sslip.io/
      - name: Jackett
        logo: assets/tools/jackett.png
        url: http://jackett.{{ homer_load_balancer_ip }}.sslip.io/
      - name: Prowlarr
        logo: assets/tools/prowlarr.png
        url: http://prowlarr.{{ homer_load_balancer_ip }}.sslip.io/
  - name: Network
    icon: fas fa-network-wired
    items:
      - name: Pi-hole
        logo: assets/tools/pi-hole.png
        url: http://pi-hole.{{ homer_load_balancer_ip }}.sslip.io/
        type: PiHole
  - name: Other
    icon: fas fa-house
    items:
      - name: Weather
        location: Stuttgart
        locationId: 2825297
        apikey: e623be78f7ab4f85b84db97485c9c4d9
        units: metric
        type: OpenWeather
      - name: Bitwarden (local)
        logo: assets/tools/bitwarden.png
        url: http://bitwarden.{{ homer_load_balancer_ip }}.sslip.io/
      - name: Home Assistant (local)
        logo: assets/tools/home-assistant.png
        url: http://home-assistant.{{ homer_load_balancer_ip }}.sslip.io/
