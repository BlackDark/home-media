entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: :443
    http:
      tls:
        certResolver: lets-encrypt
    forwardedHeaders:
      trustedIPs:
        {{ cloudflare_ips | to_nice_yaml | indent(8) }}

accessLog:
  filePath: "{{ traefik_container_log_dir }}/access.log"
  filters:
    statusCodes:
      - "303" # required due to strange Vaultwarden admin behaviour https://github.com/dani-garcia/vaultwarden/issues/2712
      - "400-499"

providers:
  file:
    filename: {{ traefik_dynamic_config_file }}
    watch: true

certificatesResolvers:
  lets-encrypt:
    acme:
      email: mail@linkvt.de
      storage: /etc/traefik/acme.json
      httpChallenge:
        # used during the challenge
        entryPoint: web
